{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üêõ Debug test:scraper",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--import", "tsx", "test-scraper.ts"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/api-server",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "DEBUG": "true"
      }
    },
    {
      "name": "üîç Debug test:scraper (Visible Browser)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--import", "tsx", "test-scraper.ts"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/api-server",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "DEBUG": "true",
        "HEADLESS": "false"
      }
    },
    {
      "name": "üß™ Debug test:diagnose",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--import", "tsx", "test-diagnose.ts"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/api-server",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "üöÄ Debug API Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--import", "tsx", "src/index.ts"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/api-server",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "DEBUG": "true",
        "HEADLESS": "false"
      }
    },
    {
      "name": "üîß Debug Current TS File",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--import", "tsx"],
      "console": "integratedTerminal",
      "cwd": "${fileDirname}",
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ]
}
